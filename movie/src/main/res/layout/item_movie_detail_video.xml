<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_cl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_large_88"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/space_large_96"
        android:layout_height="@dimen/space_large_60"
        android:layout_marginBottom="@dimen/space_small_8"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:layout_marginStart="@dimen/space_normal_16"
        android:layout_marginTop="@dimen/space_small_8"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:layout_marginStart="@dimen/space_normal_16"
        android:ellipsize="end"
        android:letterSpacing="0.08"
        android:maxLines="1"
        android:textColor="@color/text_primary_dark"
        android:layout_toEndOf="@+id/image_iv"
        android:layout_alignTop="@+id/image_iv"
        android:textSize="@dimen/text_small_14" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/space_normal_16"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:background="@color/mid_grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>