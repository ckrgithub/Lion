<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_tv"
        android:paddingStart="@dimen/space_normal_16"
        android:paddingEnd="@dimen/space_normal_16"
        android:layout_marginTop="@dimen/space_small_8"
        android:lineSpacingExtra="@dimen/space_small_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_small_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_normal_16" />
</android.support.constraint.ConstraintLayout>